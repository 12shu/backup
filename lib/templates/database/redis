  database Redis do |db|
    db.name               = "my_database_name"
    db.path               = "/usr/local/var/db/redis"
    db.password           = "my_password"
    db.host               = "localhost"
    db.port               = 5432
    db.socket             = "/tmp/redis.sock"
    db.additional_options = []
    db.invoke_save        = true
  end