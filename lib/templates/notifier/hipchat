  ##
  # Hipchat [Notifier]
  #
  notify_by Hipchat do |hipchat|
    hipchat.on_success = true
    hipchat.on_failure = true

    hipchat.token          = 'token'
    hipchat.from           = 'DB Backup'
    hipchat.rooms_notified = ['activity']
    hipchat.success_color  = 'green'
    hipchat.failure_color  = 'red'
  end