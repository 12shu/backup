  ##
  # RSync [Storage]
  #
  store_with RSync do |server|
    # server.storage_id = 'my_storage_id' (optional)
    server.username   = 'my_username'
    server.password   = 'my_password'
    server.ip         = '123.45.678.90'
    server.port       = 22
    server.path       = '~/backups/'
    server.local      = false
  end
